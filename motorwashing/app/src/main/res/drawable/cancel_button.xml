<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#da302c"
                android:endColor="#da302c"
                android:angle="270">
            </gradient>
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#da302c"
                android:endColor="#da302c"
                android:angle="0">
            </gradient>
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#da302c" />
        </shape>
    </item>
</selector>
