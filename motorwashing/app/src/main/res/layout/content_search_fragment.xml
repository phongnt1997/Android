<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutStore"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/border_background"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/avt"
            android:layout_width="140dp"
            android:layout_height="200dp"/>

        <Button
            android:id="@+id/haveSale"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/avt"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/avt"
            android:background="@drawable/sale" />

        <TextView
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="gone"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignParentBottom="true"
            android:text="Only applied on the app" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#5193f7"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNameWasher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:text="Name"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="11 km"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="11 km"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStarNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="4.3"
                android:textColor="#fff"
                android:textSize="11dp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="#fff"
                android:secondaryProgressTint="#bebfe4"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/reviewers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text=" 30 reviewer"
                android:textColor="#fff"
                android:textSize="11dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>