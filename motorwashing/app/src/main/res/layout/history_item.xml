<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgWashCarStore"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/wascarstore08" />

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblWashCarStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Car Store"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/lblWashCarStoreBookedCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Booked Code: 0123456789" />

        <TextView
            android:id="@+id/lblWashCarStoreDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Date: 31-01-2018" />

        <TextView
            android:id="@+id/lblStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Status: Done" />

        <TextView
            android:id="@+id/lblReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Reason: Our machines has been broken. Please come back again" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_marginTop="45dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/done" />

        <ImageView
            android:id="@+id/btnCancel"
            android:layout_marginTop="50dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/cancel"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>