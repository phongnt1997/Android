<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgWashCarStore"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/avt1"/>

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblWashCarStoreName"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Car Store"
            android:gravity="center"/>

        <TextView
            android:id="@+id/lblWashCarStoreBookedCode"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booked Code: 0123456789"/>

        <TextView
            android:id="@+id/lblWashCarStoreDate"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 31-01-2018"/>

        <TextView
            android:id="@+id/lblStatus"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Done"/>

        <TextView
            android:id="@+id/lblReason"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason: Our machines has been broken. Please come back again"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_checked"/>
</LinearLayout>